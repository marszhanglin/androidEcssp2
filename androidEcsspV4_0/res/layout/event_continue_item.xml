<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" 
    android:orientation="vertical">
    <include layout="@layout/line"/> 
<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/list_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"       
        android:scaleType="matrix"
        android:background="@drawable/continue_pic" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/list_item_img"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/continue_list_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLength="19"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题:"
            android:textSize="19sp"
            android:textStyle="normal"
            android:typeface="serif"
            style="@style/title_text" />
<!-- 
        <TextView
            android:id="@+id/contact_list_item_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_alignBottom="@+id/contact_list_item_1"
            android:maxLength="24"
            android:padding="5dp"
            android:text="分组："
            android:textColor="#666666"
            android:textSize="15sp"
            android:textStyle="normal"
            android:typeface="serif" /> -->


        <TextView
            android:id="@+id/continue_list_item_2"
            android:textStyle="normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/continue_list_item_1"
            android:maxLength="24"
            android:padding="5dp"
            android:text="摘要："
            android:textColor="#666666"
            android:textSize="15sp"
            android:typeface="serif" />

    </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/line"/> 
    <TextView 
  	    android:layout_width="fill_parent"
  	    android:layout_height="10dp"
  	    android:background="#EFEEEC"
  	    />
</LinearLayout>
