<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:clickable="false"  >

     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar_blue"
        android:gravity="center_vertical"
        android:clickable="false" >
	<RelativeLayout 
	    android:layout_width="70dp"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:onClick="fh"
	    android:layout_centerVertical="true">
    <Button
        android:onClick="fh"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/title_btn_back_blue"
        android:layout_marginLeft="17dp"
         />
</RelativeLayout>
<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通知详细信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />
</RelativeLayout>
        
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginTop="45dp"
        android:clickable="false" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:clickable="false" >

            <include layout="@layout/line"/>  
	    	<!-- 标题-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="通知名称"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_title"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/> 
            <!-- 事件名称-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="事件名称"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_event"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/> 
	    	<!-- 事件状态-->
           <!-- <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
                > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="事件状态"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView
                    android:id="@+id/inform_state"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
                
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>   -->
            <!-- 事件级别 -->
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
                > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="事件级别"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView
                    android:id="@+id/inform_level"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
                
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  
	    	<!-- 影响范围-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
                > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="影响范围"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_range"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />             
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  
	    	<!-- 时间范围 -->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="时间范围"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView
                    android:id="@+id/inform_timerange"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  
	    	<!--发布单位-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="发布单位"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_org"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  
	    	<!--发布人-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="发  布  人"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_author"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  
	    	<!--联系方式-->
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"  > 
                <TextView 
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系方式"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
                <TextView 
                    android:id="@+id/inform_contact"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:background="#ffffff"
                    android:layout_marginLeft="90dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_mlr"/>  	    
           <!--内容-->
           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"      > 
                <TextView 
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="通知内容"
                    android:layout_marginLeft="10dp"
                    style="@style/title_text"/>
			    <TextView 
                    android:id="@+id/inform_content"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:gravity="center_vertical|left"
                    style="@style/medium_text"
                    android:lines="3"
                    />
			    <!-- <include layout="@layout/right_image_btn"/>  -->
            </RelativeLayout>
             <include layout="@layout/line"/> 
            </LinearLayout>
            </LinearLayout>
          </ScrollView>

  

</RelativeLayout>
