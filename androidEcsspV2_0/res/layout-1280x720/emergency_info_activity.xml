<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cbg4" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="fh"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="紧急报警"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="45dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"   
                android:orientation="vertical"  >
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/emergency_info_1_2"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警信息" 
                    android:textColor="#ff6c6c"
                    android:layout_marginLeft="3dp"
                    android:textSize="17.0dip"
                     />
                </LinearLayout>
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_info_message"
                    android:lines="4"
                    android:textColor="#ffb3690a"
                    android:paddingRight="5dp"
                    android:paddingTop="7dp"
                    android:paddingLeft="27dp" 
                    android:layout_margin="5dp"
                    android:textSize="16.0dip"
                    android:background="@drawable/emergency_info_1_1" /> 
            </LinearLayout> 
             
            
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"   
                android:orientation="vertical"  >
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <LinearLayout 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal">
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/emergency_info_1_2"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业信息" 
                    android:textColor="#ff6c6c"
                    android:layout_marginLeft="3dp"
                    android:textSize="17.0dip"
                     />
                    </LinearLayout>
                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1">
                        <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" 
                        android:onClick="call"
                        android:background="@drawable/emergency_info_2_1"/>
                    </LinearLayout>
                    
                </LinearLayout>
				
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位名称： 福州市马尾区中石化兴闽油库" 
                    android:textColor="#ffffffff" 
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15.0dip" /> 
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位类别： 化工企业" 
                    android:textColor="#ffffffff" 
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15.0dip" /> 
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主要负责人：张肖明        联系电话：13655556666" 
                    android:textColor="#ffffffff" 
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15.0dip" /> 
                     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址：福建省福州市马尾区红山100-8号" 
                    android:textColor="#ffffffff" 
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15.0dip" />
                </LinearLayout> 
            </LinearLayout> 
            
             
             
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"   
                android:orientation="vertical"  >
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/emergency_info_1_2"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前照片" 
                    android:textColor="#ff6c6c"
                    android:layout_marginLeft="3dp"
                    android:textSize="17.0dip"
                     />
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                    android:id="@+id/my_viewpager_id"
                    android:layout_width="fill_parent"
                    android:layout_height="220dp" >
                </android.support.v4.view.ViewPager>
                </LinearLayout>
                

				<!-- <ImageView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/emergency_info_3"
				    /> -->
                 
            </LinearLayout> 
            
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" 
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" 
                    android:scaleType="matrix"
                    android:src="@drawable/emergency_info_lsyjxx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="历史预警信息"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" 
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" 
                    android:scaleType="matrix"
                    android:src="@drawable/emergency_info_ckbjlx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="查看报警录像"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>