<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar_blue"
        android:clickable="false"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="应急综合指挥管理平台"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <!-- 机构 -->

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center|right"
            android:onClick="orgclick"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_menu_area_tv_id"
                style="@style/main_menu_textstyle_title"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:onClick="orgclick"
                android:scrollHorizontally="true"
                android:text="福建省"
                android:singleLine="true"
                android:textColor="#2ffdff" />

            <ImageView
                android:id="@+id/event_name_add_yesbtn"
                android:layout_width="13dp"
                android:layout_height="6.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/main_menu_org_btn"
                android:onClick="orgclick" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="horizontal" >

        <!-- 左 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="#000"
            android:clickable="false"
            android:orientation="vertical" >

            <!-- 突发事件信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#f9b511"
                android:onClick="main1"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="突发事件信息" />

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_1" />
            </LinearLayout>

            <!-- 事件上报 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#54b250"
                android:onClick="main2"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="事件上报" />

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_2" />
            </LinearLayout>

            <!-- 现场处置 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#8b81f1"
                android:onClick="main3"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="现场处置" />

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_3" />
            </LinearLayout>

            <!-- 任务反馈 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#ea575b"
                android:onClick="main4"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="任务反馈" />

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_4" />
            </LinearLayout>
            <!-- 系统设置 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3aabd9"
                android:onClick="main5"
                android:orientation="horizontal"
                android:padding="13dp" >

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_5" />

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="系统设置" />
            </LinearLayout>
        </LinearLayout>
        <!-- 右 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="#000"
            android:clickable="false"
            android:orientation="vertical" >

            <!-- 紧急通知 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#d067f6"
                android:onClick="main6"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/main_menu_textstyle_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紧急通知" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/main_menu_129_6" />
                </LinearLayout>

                <TextView
                    style="@style/main_menu_textstyle_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:text="紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知紧急通知" />
            </LinearLayout>

            <!-- 资源检索 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#4a93ef"
                android:onClick="main7"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="资源检索" />

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_7" />
            </LinearLayout>

            <!-- 通讯录 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#ff8d32"
                android:onClick="main8"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="通讯录" />

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_8" />
            </LinearLayout>

            <!-- 退出系统 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#38be9d"
                android:onClick="main9"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/main_menu_textstyle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="退出系统" />

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_menu_129_9" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>